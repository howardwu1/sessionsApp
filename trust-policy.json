{
	  "Version": "2012-10-17",
	    "Statement": [
		        {
				      "Effect": "Allow",
				            "Principal": {
						            "Service": "lambda.amazonaws.com"
							          },
								        "Action": "sts:AssumeRole"
									    },
		{
			 "Action": [
        			"dynamodb:*"
      				],
      			"Resource": [
				"arn:aws:dynamodb:us-east-1:000000000000:table/Users"
      				],
      			"Effect": "Allow"		
		},
		{
			"Effect": "Allow",
      			"Action": [
         			"ec2:RunInstances",
         			"ec2:AssociateIamInstanceProfile",
         			"ec2:ReplaceIamInstanceProfileAssociation"
      			],
      			"Resource": "*"
		},
		{
     			 "Effect": "Allow",
      			"Action": "iam:PassRole",
      			"Resource": "*"
    		}		
	    ]
}

